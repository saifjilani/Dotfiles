[user]
	name = Celso Dantas
	email = celsodantas@gmail.com
[alias]
  s  = status
  st = status
  ci = commit
  co = checkout
  d  = diff
  dc = diff --cached
  amend = commit --amend
  aa = add --all
  ff = merge --ff-only
  pullff = pull --ff-only
  noff = merge --no-ff
  fa = fetch --all
  pom = push origin master
  ds = diff --stat=160,120
  dh1 = diff HEAD~1
  sl = stash list

  # Fancy logging.
  #   h = head
  #   hp = head with patch
  #   r = recent commits, only current branch
  #   ra = recent commits, all reachable refs
  #   l = all commits, only current branch
  #   la = all commits, all reachable refs
  head = !git l -1
  h = !git head
  hp = "!. ~/.githelpers && show_git_head"
  r = !git l -30
  ra = !git r --all
  l = "!. ~/.githelpers && pretty_git_log"
  la = !git l --all

  rebase-yolo = !git fetch && git rebase origin/master
  clear-merges = !git branch -d `git branch --merged | grep -v '^*' | tr -d '\n'`

[push]
	default = simple

[color]
  ui = auto
[color]
	branch = auto
	diff = auto
	status = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red
	new = cyan
[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[rerere]
  # Remember my merges
  # http://gitfu.wordpress.com/2008/04/20/git-rerere-rereremember-what-you-did-last-time/
  enabled = true

[core]
  autocrlf = false
  editor = vim

[pull]
  rebase = true
	default = current
[url "git@github.com:"]
	insteadOf = https://github.com/
